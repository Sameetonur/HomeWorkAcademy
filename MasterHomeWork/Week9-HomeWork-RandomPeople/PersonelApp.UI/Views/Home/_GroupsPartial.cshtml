@model List<Group>

<div class="mt-4">
    <h3>Created Groups</h3>
    <div class="row">
        @foreach (var group in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-header">
                        @group.Name
                    </div>
                    <div class="card-body">
                        <ul class="list-group">
                            @foreach (var person in group.People)
                            {
                                <li class="list-group-item">@person.Name @person.Surname</li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="mt-3">
        <button onclick="saveGroups()" class="btn btn-primary">Save Groups</button>
        <button onclick="deleteGroups()" class="btn btn-danger">Delete Groups</button>
    </div>
</div>
